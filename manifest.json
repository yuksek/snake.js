{
  "manifest_version": 2,

  "name": "snake.js",
  "description": "Play snake instantly on the webpage before you click a link, build up your score as you can while you browse.",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
